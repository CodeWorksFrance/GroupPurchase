doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='description' content='')
  meta(name='author' content='Michelle AVOMO, Christophe Thibaut')
  title The Group purchase app
  link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
body
    header
      .navbar.navbar-dark.bg-dark.shadow-sm
        .container
          a.navbar-brand.d-flex.align-items-center(href='#')
            svg.me-2(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' aria-hidden='true' viewbox='0 0 24 24')
              path(d='M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z')
              circle(cx='12' cy='13' r='4')
            strong Group purchase
    main
        .modal-dialog
            .modal-content
                .modal-body
                    div.purchase
                        h3 Users
                        form(ref="newUserForm" id="uploadForm" role="form" method="POST" action="/newUser" enctype="multipart/form-data")
                            div.form-group
                                label(for="user") User:
                                input#name.form-control(type="text", placeholder="user", name="user", required )
                            div.form-group
                                label(for="date") Date of Birth:
                                input#date.form-control(type="date", name="date", required)
                            button.btn.btn-primary(type="submit", name="new-user") Confirm
                            button.btn.btn-primary(onclick="window.location.href='/'") Cancel

                        table.ui.celled.table.center.aligned
                                                tbody
                                                    tr
                                                        th Name
                                                        th Date
                                                    each user in users
                                                        tr
                                                            td #{ user.name }
                                                            td #{ (user.birthDate).toLocaleDateString("fr") }
